<html>
    <head>
        <title>Node CRUD Using MongoDB</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    </head>

    <body>
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-6">
                    <h2 style="font-weight:bold;"><u>Update User (<%= users.name %>)</u></h2>
                </div>
                <div class="col-md-6">
                    <a href="/show" class="btn btn-success btn-lg" style="float:right;">User List</a>
                </div>
            </div>
        </div>
        <div class="container">
            
            <form method="POST" action="/update/<%= users._id %>" autocomplete="off">
                <div class="form-group">
                    <label><b>User Name :</b></label>
                    <input type="text" name="name" class="form-control" value="<%= users.name %>" placeholder="Enter Name Here">
                </div>
                <div class="form-group">
                    <label><b>User Email :</b></label>
                    <input type="email" name="email" class="form-control" value="<%= users.email %>" placeholder="Enter Email Here">
                </div>
                <div class="form-group">
                    <label><b>User Password :</b></label>
                    <input type="password" name="password" class="form-control" value="<%= users.password %>" placeholder="Enter Password Here">
                </div>
                <div class="form-group">
                    <input type="submit" name="update" value="Update" class="btn btn-primary">
                </div>
            </form>
            
        </div>
    </body>
</html>