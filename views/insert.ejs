<html>
    <head>
        <title>Node CRUD Using MongoDB</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    </head>

    <body>
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-6">
                    <h2 style="font-weight:bold;"><u>Add User</u></h2>
                </div>
                <div class="col-md-6">
                    <a href="/show" class="btn btn-primary btn-lg" style="float:right;">User List</a>
                </div>
            </div>
        </div>
        <div class="container mt-3">
            <form method="POST" action="/insert" autocomplete="off">
                <div class="form-group">
                    <label><b>User Name :</b></label>
                    <input type="text" name="name" required class="form-control" style="border:2px solid green;" placeholder="Enter Name Here">
                </div>
                <div class="form-group">
                    <label><b>User Email :</b></label>
                    <input type="email" name="email" required class="form-control" style="border:2px solid green;"  placeholder="Enter Email Here">
                </div>
                <div class="form-group">
                    <label><b>User Password :</b></label>
                    <input type="password" name="password" required class="form-control" style="border:2px solid green;"  placeholder="Enter Password Here">
                </div>
                <div class="form-group">
                    <input type="submit" name="insert" class="btn btn-success btn-lg">
                </div>
            </form>
        </div>
    </body>
</html>